<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.example.cya.boop.Register"
    android:background="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Space android:layout_width="match_parent"
            android:layout_height="27.50dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/boop" />
        <Space android:layout_width="match_parent"
            android:layout_height="27.50dp" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/interactuable"
            android:ems="10"
            android:hint="@string/EscribeCorreo"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <Space android:layout_width="match_parent"
            android:layout_height="27.50dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/interactuable"
            android:ems="10"
            android:hint="@string/EscribeContrasena"
            android:inputType="text"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/interactuable"
            android:ems="10"
            android:hint="@string/EscribeContrasena"
            android:inputType="text"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/IntroView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/useConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CondicionesUso"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/boop_colors"
                android:text="@string/CancelarRegistro" />

            <Space
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:layout_width="1dp" />

            <Button
                android:id="@+id/accept"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/primary_button"
                android:text="@string/AceptarRegistro" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
