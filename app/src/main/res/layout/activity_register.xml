<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/marginShowActivity"
    android:paddingRight="@dimen/marginShowActivity"

    tools:context="com.example.cya.boop.Register"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marginShowActivity"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#777"
            android:background="@drawable/ic_arrow_back_black_24dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logoboop"/>

        <Space android:layout_width="match_parent"
            android:layout_height="@dimen/marginbig" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield"
            android:ems="10"
            android:hint="@string/EscribeCorreo"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textBig" />

        <Space android:layout_width="match_parent"
            android:layout_height="@dimen/marginbig" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield"
            android:ems="10"
            android:hint="@string/EscribeContrasena"
            android:inputType="text"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textBig" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin" />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield"
            android:ems="10"
            android:hint="@string/EscribeContrasena"
            android:inputType="text"
            android:password="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textBig" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_margin="8dp"
            android:id="@+id/useConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CondicionesUso"
            android:textAlignment="center"
            android:textColor="#000" />


            <Button
                android:id="@+id/accept"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/button2"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:text="@string/AceptarRegistro" />

    </LinearLayout>

</ScrollView>
