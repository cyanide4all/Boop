<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/marginShowActivity"
    android:paddingRight="@dimen/marginShowActivity"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cya.boop.Login"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"

        android:layout_centerInParent="true">
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/marginbig" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/logoboop"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/imageView2"
            android:layout_height="100dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32sp"
            android:text="Sign in"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:indicatorColor="#efff"
            app:indicatorName="LineScalePulseOutRapidIndicator" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/marginbig" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="@dimen/textBig"
            android:id="@+id/inputEmail"
            android:hint="Email"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:singleLine="true"
            android:background="@drawable/textfield"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="@dimen/textBig"
            android:id="@+id/inputPass"
            android:hint="Pass"
            android:singleLine="true"
            android:background="@drawable/textfield"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost your password?"
                android:layout_marginLeft="8dp"
                android:background="#fff"
                android:textAllCaps="false"
                style="@android:style/Widget.Material.Button.Borderless"
                android:textStyle="normal"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/botonLogin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button1"
                android:text="Sign in"
                android:layout_gravity="right"
                style="@android:style/Widget.Material.Button.Borderless"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
        <Space
            android:layout_width="@dimen/marginbig"
            android:layout_height="@dimen/marginbig" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Login with google"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/botonGoogle"
                android:background="@drawable/textfield"
                style="@android:style/Widget.Material.Button.Borderless"
                android:elevation="0dp" />

            <Space
                android:layout_height="@dimen/margin"
                android:layout_width="1dp" />

            <Button
                android:text="Crear Cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/botonCrearCuenta"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="@drawable/button2"
                style="@android:style/Widget.Material.Button.Borderless"
                android:elevation="0dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
