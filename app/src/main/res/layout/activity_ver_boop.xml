<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
tools:context="com.example.cya.boop.VerBoop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_weight="0.3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_image_black_24dp"
                android:id="@+id/imageView"
                android:layout_weight="0.4" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

                <TextView
                    android:text="@string/creador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBcrea"
                    android:textStyle="normal|bold"
                    android:textSize="16sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBCreador"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/popularidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBpopu"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBPopularidad"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/VBnom"
            tools:text="@string/nombreBoop"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <TextView
            android:text="nombre boop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VBnombre"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/empieza"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/VBhoraIni"
                android:layout_weight="0.2"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/VBInicio"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical" />

            <TextView
                android:text="@string/acaba"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/VBhoraFin"
                android:layout_weight="0.2"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/VBfinal"
                android:layout_weight="0.3"
                android:layout_gravity="left|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/clasificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBclas"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/VBclasificacion"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/maxAsistentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBmax"
                android:layout_weight="0.2"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBmaxAsistentes"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical" />

            <TextView
                android:text="@string/asistentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBasist"
                android:layout_weight="0.2"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBasistentes"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical" />

        </LinearLayout>

        <TextView
            android:text="@string/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/VBDesc"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VBdescripcion"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="@string/puntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:elevation="1dp" />

            <RatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/VBratingBar"
                android:numStars="3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.44">

                <Button
                    android:text="@string/botonChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBsalaChat"
                    android:layout_weight="0.33"
                    android:elevation="5dp"
                    android:padding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="2dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBasistir"
                    android:layout_weight="0.33"
                    android:textOff="@string/noAsistir"
                    android:textOn="@string/asistir" />

                <Button
                    android:text="@string/dejarDeVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBdejarDeVer"
                    android:layout_weight="0.33"
                    android:padding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="2dp"
                    android:elevation="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>