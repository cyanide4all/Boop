<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.cya.boop.VerBoop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/boop_imagen_fondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/nuevo_boop"
            android:scaleType="centerInside"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/donated_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
                <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/VBkarma"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_gravity="center" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/boopavatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/round_primary_button"
                android:scaleType="fitCenter"
                android:tint="#fff"
                app:srcCompat="@drawable/paperclip" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="Que es un programador agil?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VBnombre"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="15"
                android:textColor="#fff"
                android:textSize="28sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_gravity="center" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />
        <TextView
            android:text="Evento en curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VBnombre"
            android:layout_weight="1"
            android:gravity="center"
            android:ems="15"
            android:textColor="#fe7f2d"
            android:textSize="28sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />
        <TextView
            android:text="Desde el GDG de ourense haremos una charla sobre programacion agil. y polymer."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VBdescripcion"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#05a8aa"
            android:ems="15"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />
        <TextView
            android:text="este evento ocurre a las 17:00 el 21/04/2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VBfecha"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#05a8aa"
            android:ems="15"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8.09dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="13dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textfield"
                android:text="Quien va?"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8.09dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textfield"
                android:text="Voy a ir"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="8.09dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/textfield"
                    android:text="Upvote"/>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/textfield"
                    android:text="Downvote"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>